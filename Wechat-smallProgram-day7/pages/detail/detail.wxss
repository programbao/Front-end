.main{
  display: flex;
  flex-direction: column;
}
.de_img{
  width: 100%;
  height: 400rpx;
}
.avatar{
  font-size: 24rpx;
  padding: 10rpx;
}
.avatar image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.title{
  font-weight: bold;
  padding: 10rpx;
}
.cl_sh{
  position: relative;
}
.cl_sh_a{
  float: right;
  margin-right: 30rpx;
}
.cl_sh image{
  margin-right: 20rpx;
  width: 100rpx;
  height: 100rpx;
}
.link{
  position: absolute;
  top: 42rpx;
  width: 90%;
  left: 5%;
  height: 1px;
  background-color: #eee; 
  z-index: -1;
}